<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultadoActivity"
        android:background="@color/colorPrimary">

    <TextView
            android:text="RESULTADO"
            android:gravity="center"
            android:layout_width="314dp"
            android:layout_height="70dp"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.018"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" app:fontFamily="sans-serif-condensed"
            android:typeface="normal" android:textColor="@color/colorAccent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/tvName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.098" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Skin"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/tvSkin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.0" android:hint="@string/skin_color"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Gender"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/tvGender" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSkin"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.0" android:hint="@string/gender"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Birth"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/tvBirth" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvGender"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.018" android:hint="@string/gender"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="HairColor"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/tvHair" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvBirth"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.0" android:hint="@string/gender"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="24sp"/>
    <ImageView
            android:layout_width="161dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/if_yoda"
            android:id="@+id/ivPerson"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvGender" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.777"
            tools:ignore="VectorDrawableCompat"/>
    <Button
            android:text="QUIT"
            android:layout_width="247dp"
            android:layout_height="58dp"
            android:id="@+id/btQuit" android:onClick="Sair"
            style="@style/Widget.AppCompat.Button.Colored" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHair" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.21" android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>


</android.support.constraint.ConstraintLayout>